{
  "name": "theloomreport",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "TheLoomReport - AI-powered static publication built with Eleventy.",
  "scripts": {
    "build": "eleventy --config=eleventy.config.cjs",
    "start": "cross-env ELEVENTY_ENV=development eleventy --config=eleventy.config.cjs --serve --watch",
    "serve": "npm run start",
    "generate:draft": "node scripts/generate_post.js",
    "digest": "node scripts/generate_digest.js",
    "newsletter": "node scripts/send_newsletter.js",
    "moderate": "node scripts/moderate_content.js",
    "optimize:images": "node scripts/optimize_image.js"
  },
  "engines": {
    "node": ">=18.17"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@google/generative-ai": "^0.11.0",
    "@sendgrid/mail": "^7.7.0",
    "cross-env": "^7.0.3",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "gray-matter": "^4.0.3",
    "html-to-text": "^9.0.3",
    "luxon": "^3.4.4",
    "p-limit": "^5.0.0",
    "sharp": "^0.33.3",
    "slugify": "^1.6.6"
  }
}
