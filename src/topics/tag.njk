---
layout: base.njk
pagination:
  data: collections.tagList
  size: 1
  alias: topic
permalink: "/topics/{{ topic | slug }}/"
meta:
  eleventyComputed:
    title: "Topic: {{ topic }}"
    description: "Articles exploring {{ topic }} from TheLoomReport."
---
<h1>#{{ topic }}</h1>
<p>Recent coverage on <strong>{{ topic }}</strong> from the past few weeks.</p>
<div class="post-list">
  {% for post in collections[topic] | reverse %}
    <article class="post-item">
      <time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
      <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      <p>{{ post.data.description }}</p>
    </article>
  {% endfor %}
</div>
