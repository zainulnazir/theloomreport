{% set variant = variant or "stack" %}
<form class="newsletter newsletter--{{ variant }}" method="post" action="https://api.sendgrid.com/v3/marketing/contacts" data-form-type="newsletter">
  <label class="visually-hidden" for="newsletter-email">Email</label>
  <input type="email" id="newsletter-email" name="email" placeholder="you@example.com" required autocomplete="email" />
  <button type="submit" class="btn">Join the digest</button>
  <p class="fine-print">We send one weekly digest plus urgent AI briefings. Opt out anytime.</p>
</form>
