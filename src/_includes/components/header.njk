<header class="site-header">
  <a href="/" class="brand-banner" aria-label="{{ site.title }} home">
    <span class="brand-banner__text">{{ site.title }}</span>
  </a>
  <nav class="primary-nav" aria-label="Primary navigation">
    <ul>
      <li>
        <a href="/topics/">
          <svg viewBox="0 0 24 24" aria-hidden="true" class="nav-icon">
            <path d="M5 5h14M5 12h14M5 19h10" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          <span>Topics</span>
        </a>
      </li>
      <li>
        <a href="/archives/">
          <svg viewBox="0 0 24 24" aria-hidden="true" class="nav-icon">
            <path d="M4 7h16v12a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V7Zm2-4h12a2 2 0 0 1 2 2v2H4V5a2 2 0 0 1 2-2Z" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" fill="none" />
            <path d="M9 12h6" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" />
          </svg>
          <span>Archives</span>
        </a>
      </li>
      <li>
        <a href="/about/">
          <svg viewBox="0 0 24 24" aria-hidden="true" class="nav-icon">
            <circle cx="12" cy="8" r="3.2" stroke="currentColor" stroke-width="1.6" fill="none" />
            <path d="M6.5 19a5.5 5.5 0 0 1 11 0" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" fill="none" />
          </svg>
          <span>About</span>
        </a>
      </li>
      <li>
        <a href="/subscribe/" class="cta-link">
          <svg viewBox="0 0 24 24" aria-hidden="true" class="nav-icon">
            <path d="M4 5h16a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1Z" stroke="currentColor" stroke-width="1.6" fill="none" />
            <path d="m5 7 7 5 7-5" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          <span>Subscribe</span>
        </a>
      </li>
    </ul>
  </nav>
  <button type="button" class="theme-toggle" data-theme-toggle aria-label="Toggle color scheme">
    <span class="theme-toggle__track" aria-hidden="true">
      <span class="theme-toggle__icon theme-toggle__icon--sun" aria-hidden="true">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="4" />
          <path d="M12 2v2m0 16v2m10-10h-2M4 12H2m15.07-7.07-1.42 1.42M6.35 17.65l-1.42 1.42m12.72 0-1.42-1.42M6.35 6.35 4.93 4.93" />
        </svg>
      </span>
      <span class="theme-toggle__icon theme-toggle__icon--moon" aria-hidden="true">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 12.8A9 9 0 1 1 11.2 3 7 7 0 0 0 21 12.8Z" />
        </svg>
      </span>
      <span class="theme-toggle__thumb" aria-hidden="true"></span>
    </span>
    <span class="visually-hidden" data-theme-toggle-label>Dark mode</span>
  </button>
</header>
