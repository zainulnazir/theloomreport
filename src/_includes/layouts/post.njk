---
layout: layouts/base.njk
---
<article>
  <header class="hero">
    <p><a href="/topics/">← Back to topics</a></p>
    <h1>{{ title }}</h1>
    <p>{{ description }}</p>
    <p>
      <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
      {% if tags %}
        · {% for tag in tags %}<a href="/topics/{{ tag | slug }}/">#{{ tag }}</a>{% if not loop.last %}, {% endif %}{% endfor %}
      {% endif %}
    </p>
  </header>

  {% if hero and hero.image %}
    <figure>
      <img
        src="{{ hero.image }}"
        {% if hero.sources %}
          srcset="{% for source in hero.sources %}{{ source.src }} {{ source.width }}w{% if not loop.last %}, {% endif %}{% endfor %}"
          sizes="(min-width: 1024px) 1200px, 100vw"
        {% endif %}
        alt="{{ hero.alt }}"
        loading="lazy"
        class="lazyload"
        width="1200"
        height="720"
      />
    </figure>
  {% endif %}

  <div class="content">
    {{ content | safe }}
  </div>
</article>
