<h1>Archives</h1>
<div class="grid">
  {% for group in collections.postsByYear %}
    <section class="card">
      <h2>{{ group.year }}</h2>
      <ul>
        {% for post in group.items %}
          <li>
            <time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
            â€” <a href="{{ post.url }}">{{ post.data.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </section>
  {% endfor %}
</div>
